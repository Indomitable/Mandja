<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ProgressBar android:id="@+id/progress_copy_db" android:layout_height="50dp" android:layout_width="fill_parent"
                 android:layout_gravity="center" android:layout_weight="0" android:indeterminate="false" style="@android:style/Widget.ProgressBar.Horizontal"
                 android:layout_marginTop="40dp" android:max="100"
                 android:progress="0" android:layout_marginLeft="4dp" android:layout_marginRight="4dp">

    </ProgressBar>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/copy_db"
            android:id="@+id/txt_copy_db"
            android:textSize="20dp" android:layout_gravity="center_horizontal|bottom"
            android:gravity="bottom" android:layout_marginTop="20dp" android:layout_weight="0"/>
</LinearLayout>