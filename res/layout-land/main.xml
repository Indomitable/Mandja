<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff0f0f0"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llRecipesGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtRecipes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="@string/recipes"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/icon"
                android:gravity="center_horizontal"
                android:onClick="onAllRecipesClick"
                android:text="@string/allRecipes" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/favorite"
                android:gravity="center_horizontal"
                android:onClick="onShowFavoriteRecipes"
                android:text="@string/favorites" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/categories_icon"
                android:gravity="center_horizontal"
                android:onClick="onCategoryRecipesClick"
                android:text="@string/categoriesRecipes" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llUsefullGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="@string/usefull"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/lamp_icon"
                android:gravity="center_horizontal"
                android:onClick="onAdvicesClick"
                android:text="@string/advices" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/spices_icon"
                android:gravity="center_horizontal"
                android:onClick="onSpicesClick"
                android:text="@string/spices" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/products_icon"
                android:gravity="center_horizontal"
                android:onClick="onProductsClick"
                android:text="@string/products" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/tools"
                android:gravity="center_horizontal"
                android:onClick="onToolsClick"
                android:text="@string/tools" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout5"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dip"
        android:onClick="onLatestRecipeClick"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtRecipeCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="@string/recipeOfTheDay"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtRecipeContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>